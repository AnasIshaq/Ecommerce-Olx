<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/navbar-css/nav-style.css" rel="stylesheet" />
    <link href="~/navbar-css/nav=bootstrap.min.css" rel="stylesheet" />
    <script src="~/navbar-js/bootstrap.bundle.min.js"></script>
    <script src="~/navbar-js/jquery-1.11.0.min.js"></script>
    <script src="~/navbar-js/modernizr.js"></script>
    <script src="~/navbar-js/plugins.js"></script>
    <script src="~/navbar-js/script.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown > .dropdown-toggle:active {
            /*Without this, clicking will make it sticky*/
            pointer-events: none;
        }
    </style>


</head>
<body>



    <header id="header" class="site-header header-scrolled position-static text-black bg-white" style=" box-sizing: border-box; box-shadow: 0 2px 18px 0 rgba(129, 162, 182, .3); ">
        <nav id="header-nav" class="navbar navbar-expand-lg px-2 mb-2">
            <div class="container-fluid" style="display:flex; justify-content:space-around;">

                <a href="#">
                    <img src="~/nav-logo/navlogo.png" class="" height="100" width="120" />
                </a>



                <div class="offcanvas-body">
                    <ul id="navbar" class="navbar-nav text-uppercase justify-content-end align-items-center flex-grow-1 pe-3">








                        <li class="nav-item dropdown">
                            <a style="font-weight:bolder;" class="nav-link me-4 dropdown-toggle link-dark" data-bs-toggle="dropdown" href="@Url.Action("View_Category")" role="button" aria-expanded="false">Home</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("View_Category")" class="dropdown-item">Home</a>
                                </li>
                                <li>
                                    <a href="blog.html" class="dropdown-item">Category</a>
                                </li>
                                <li>
                                    <a href="shop.html" class="dropdown-item">Shop</a>
                                </li>
                                <li>
                                    <a href="cart.html" class="dropdown-item">Cart</a>
                                </li>
                                <li>
                                    <a href="@Url.Action()" class="dropdown-item">Checkout</a>
                                </li>
                                <li>
                                    <a href="single-post.html" class="dropdown-item">Single Post</a>
                                </li>
                                <li>
                                    <a href="single-product.html" class="dropdown-item">Single Product</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a style="font-weight:bolder;" class="nav-link me-4" href="#company-services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-weight:bolder;" class="nav-link me-4" href="#mobile-products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-weight:bolder;" class="nav-link me-4" href="#mobile-products">About</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-weight:bolder;" class="nav-link me-4" href="#mobile-products">Contact</a>
                        </li>

                        <li class="nav-item">
                            <a style="font-weight:bolder;" class="nav-link me-4" href="#latest-blog">Blog</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a style="font-weight:bolder;" class="nav-link me-4 dropdown link-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                                <i class='fa fa-user  text-muted'></i>
                            </a>
                            <ul class="dropdown-menu">
                                @if (Session["user_id"] != null)
                                {

                                    <li>
                                        <a href="@Url.Action("MyProfile")" class="dropdown-item text-muted">My Profile</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("User_Logout")" class="dropdown-item text-muted">Logout</a>
                                    </li>

                                }
                                else
                                {
                                    <li>
                                        <a href="@Url.Action("User_Signup")" class="dropdown-item text-muted">Register</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("User_Login")" class="dropdown-item text-muted">Login</a>
                                    </li>
                                }
                            </ul>
                        </li>



                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>


</body>
</html>
