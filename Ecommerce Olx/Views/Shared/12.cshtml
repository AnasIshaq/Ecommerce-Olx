<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
  
    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown > .dropdown-toggle:active {
            /*Without this, clicking will make it sticky*/
            pointer-events: none;
        }
    </style>
    


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav>
        <ul>

    <li class="nav-item dropdown">
        <a style="font-weight:bolder;" class="nav-link me-4 dropdown-toggle link-dark" data-bs-toggle="dropdown" href="@Url.Action("View_Category")" role="button" aria-expanded="false">Home</a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("View_Category")" class="dropdown-item">Home</a>
            </li>
            <li>
                <a href="blog.html" class="dropdown-item">Category</a>
            </li>
            <li>
                <a href="shop.html" class="dropdown-item">Shop</a>
            </li>
            <li>
                <a href="cart.html" class="dropdown-item">Cart</a>
            </li>
            <li>
                <a href="@Url.Action()" class="dropdown-item">Checkout</a>
            </li>
            <li>
                <a href="single-post.html" class="dropdown-item">Single Post</a>
            </li>
            <li>
                <a href="single-product.html" class="dropdown-item">Single Product</a>
            </li>
        </ul>
    </li>

        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
