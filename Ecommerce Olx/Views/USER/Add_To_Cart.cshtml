@model Ecommerce_Olx.Models.Table_Product
@{
    ViewBag.Title = "Add_To_Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add_To_Cart</h2>

@using (Html.BeginForm()) {

    
    <div class="card mb-3" style="max-width: 540px; position:relative; left:134px; margin-top:40px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Url.Content(Model.product_IMAGE)" class="card-img img-thumbnail " alt="Product">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.product_NAME </h5>
                    <p class="card-text">Price : <strong>@Model.product_PRICE</strong> </p>
                    <input type="number" id="quantity" name="quantity" value="1" max="100" class="form-control" style="display:inline-block;" />
                    @if (Session["user_id"] != null)
                    {

                    <input type="submit" value="Buy Now " class="btn btn-warning"  style="display:flex; justify-content:center; align-items:center;"/>
                    }

                    


                </div>
            </div>
        </div>
    </div>
    }
