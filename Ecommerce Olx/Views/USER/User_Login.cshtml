@model Ecommerce_Olx.Models.Table_User
@{
    ViewBag.Title = "User_Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}
<body>

@using (Html.BeginForm())
{
    <main  style="background-color: #9A616D; ">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <div style="margin-bottom:3rem;">

                                        <h4 class="h1 fw-bold mb-0 text-muted" style="display:flex; align-items:center; justify-content:center;">BrustBasket</h4>
                                    <p  style="display:flex; align-items:center; justify-content:center;   color:orange;">Sell&Purchase</p>

                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(x => x.userr_EMAIL, new { @class = "form-control form-control-lg", @Placeholder = "Type Email" })
                                        <label class="form-label">Email address</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.PasswordFor(x => x.userr_PASSWORD, new { @class = "form-control form-control-lg", @Placeholder = "Type Password" })
                                        <label class="form-label">Password</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <input class="btn btn-dark btn-lg btn-block" type="submit" id="submit" value="Login" />
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="@Url.Action("User_Signup")"
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>



}
</body>

<div>
    <p style="color:red;">@ViewBag.error</p>


</div>

